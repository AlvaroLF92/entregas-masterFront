{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports":true,
        "sourceMap": true,
        "jsx":"react",
        "noLib":false,
        "skipLibCheck":true,
        "esModuleInterop":true
    },
    "include": ["src/**/*","webpack.prod.js","webpack.dev.js"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}